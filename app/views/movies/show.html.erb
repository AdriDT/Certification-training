<h2><%= @movie.title %></h2>
<p><img alt="Poster" width="200" src="https://image.tmdb.org/t/p/w500<%= movie.poster %>"></p>
<p><%= @movie.rating %></p>
<p><%= @movie.release_date %></p>
<p><%= @movie.overview %></p>

<%= link_to "Update Movie", edit_movie_path(@movie) %>

<%= link_to "Add Review", new_movie_review_path(@movie) %>

<%= link_to "Delete",
  movie_path(@movie),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>

<div class="container mt-5">
      <p><strong>Reviews</strong></p>
      <ul class="list-group">
        <% @movie.reviews.each do |review| %>
          <%= review.content %>
          <%= link_to "Delete", review_path(review), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
        <% end %>
      </ul>
      <br>
</div>